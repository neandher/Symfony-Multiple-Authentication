{% extends 'gestor/base.html.twig' %}

{% block body %}

    <h3>Alterar Senha</h3>

    <div class="row">
        <div class="col-lg-6">

            {{ include('gestor/partials/alerts.html.twig') }}

            {{ form_start(form, { 'action': path('gestor_security_change_password') }) }}

            {{ form_errors(form) }}

            {{ form_row(form.current_password) }}
            {{ form_row(form.plainPassword.first) }}
            {{ form_row(form.plainPassword.second) }}

            <button class="btn btn-primary">{{ 'security.change_password.btns.submit'|trans }}</button>

            {{ form_widget(form._token) }}

            {{ form_end(form, {'render_rest': false}) }}

        </div>
    </div>

{% endblock %}